# ==============================================
# 多项目 Nginx 配置示例
# 适用于在同一台服务器上运行多个项目的情况
# ==============================================

# 主域名项目配置示例
server {
    listen 80;
    listen [::]:80;
    server_name adddesigngroup.com www.adddesigngroup.com;
    
    location /.well-known/acme-challenge/ {
        root /var/www/letsencrypt;
    }
    
    location / {
        return 301 https://$server_name$request_uri;
    }
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name adddesigngroup.com www.adddesigngroup.com;
    
    # 主域名 SSL 证书
    ssl_certificate /etc/letsencrypt/live/adddesigngroup.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/adddesigngroup.com/privkey.pem;
    
    # SSL 安全配置 (共用)
    include /etc/nginx/snippets/ssl-params.conf;
    
    # 主项目静态文件
    root /var/www/main-project/dist;
    index index.html;
    
    location / {
        try_files $uri $uri/ /index.html;
    }
    
    # 主项目 API (使用 5000 端口)
    location /api/ {
        proxy_pass http://127.0.0.1:5000;
        include /etc/nginx/snippets/proxy-params.conf;
    }
    
    # 主项目日志
    access_log /var/log/nginx/main-project.access.log;
    error_log /var/log/nginx/main-project.error.log;
    
    add_header X-Served-By "Main-Project" always;
}

# EduPro 二级域名项目配置
server {
    listen 80;
    listen [::]:80;
    server_name edupro.adddesigngroup.com;
    
    location /.well-known/acme-challenge/ {
        root /var/www/letsencrypt;
    }
    
    location / {
        return 301 https://$server_name$request_uri;
    }
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name edupro.adddesigngroup.com;
    
    # EduPro SSL 证书
    ssl_certificate /etc/letsencrypt/live/edupro.adddesigngroup.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/edupro.adddesigngroup.com/privkey.pem;
    
    # SSL 安全配置 (共用)
    include /etc/nginx/snippets/ssl-params.conf;
    
    # EduPro 静态文件
    root /var/www/edupro/frontend/dist;
    index index.html;
    
    # 文件上传大小限制
    client_max_body_size 20M;
    
    # Gzip 压缩 (共用配置)
    include /etc/nginx/snippets/gzip.conf;
    
    # 缓存配置
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
    }
    
    # 前端路由 (SPA)
    location / {
        try_files $uri $uri/ /index.html;
        include /etc/nginx/snippets/security-headers.conf;
    }
    
    # EduPro API (使用 5001 端口)
    location /api/ {
        proxy_pass http://127.0.0.1:5001;
        include /etc/nginx/snippets/proxy-params.conf;
    }
    
    # 健康检查
    location /health {
        proxy_pass http://127.0.0.1:5001;
        access_log off;
    }
    
    # 上传文件服务
    location /uploads/ {
        alias /var/www/edupro/uploads/;
        expires 1y;
        add_header Cache-Control "public, immutable";
    }
    
    # EduPro 日志
    access_log /var/log/nginx/edupro.access.log;
    error_log /var/log/nginx/edupro.error.log;
    
    add_header X-Served-By "EduPro-System" always;
}

